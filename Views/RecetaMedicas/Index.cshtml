@model IEnumerable<bloodyvalentinee.Models.Data.RecetaMedica>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Receta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.idUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Receta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRecetaMedica">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdRecetaMedica">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRecetaMedica">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
