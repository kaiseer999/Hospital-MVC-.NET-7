@model bloodyvalentinee.Models.Data.HistoriaClinica

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Borrar</h1>

<h3>Estas seguro de eliminar esta historia?</h3>
<div>
    <h4>HistoriaClinica</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.idUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdMedico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdMedico)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsGeneral)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsGeneral.IdIgeneral)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EnfermedadHereditaria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnfermedadHereditaria.IdEh)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdHcu" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
